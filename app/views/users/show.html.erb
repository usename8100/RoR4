<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
  <p>
    <strong>Pass:</strong>
    <%= @user.password_digest %>
  </p>
  <p>
    <strong>Micropost:</strong>
    <% @microposts.each do |micropost| %>
      <%= micropost.content %><br>
    <%end%>
  </p>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>